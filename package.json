{
  "name": "components",
  "version": "1.1.0",
  "homepage": "https://masiamj.github.io/components",
  "description": "A test component library with component viewer",
  "author": "masiamj",
  "license": "MIT",
  "repository": "masiamj/components",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build-storybook": "build-storybook",
    "build": "rollup -c",
    "commit": "git-cz",
    "generate:component:dumb": "hygen component dumb",
    "generate:component:hoc": "hygen component hoc",
    "lint": "lint-staged",
    "prepare": "npm run build",
    "publicize": "gh-pages -d storybook-static",
    "release": "semantic-release",
    "start": "rollup -c -w",
    "storybook": "start-storybook -p 6006",
    "test:watch": "SKIP_PREFLIGHT_CHECK=true react-scripts test --env=jsdom",
    "test": "cross-env SKIP_PREFLIGHT_CHECK=true CI=1 react-scripts test --env=jsdom"
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@commitlint/prompt": "^7.6.1",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.7",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-links": "^5.0.11",
    "@storybook/addons": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "@testing-library/react": "^8.0.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^7.1.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "commitizen": "^3.1.1",
    "cross-env": "^5.1.4",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.10.0",
    "gh-pages": "^1.2.0",
    "husky": "^2.3.0",
    "hygen": "^4.0.2",
    "jest-dom": "^3.4.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.4.1",
    "react-scripts": "^3.0.1",
    "rollup": "^0.64.1",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-url": "^1.4.0",
    "semantic-release": "^15.13.12"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "antd": "^3.18.2",
    "ui-box": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "./node_modules/.bin/commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "./node_modules/.bin/lint-staged && npm test"
    }
  },
  "lint-staged": {
    "./src/**/*.js": [
      "./node_modules/.bin/prettier --check --write --config .prettierrc ./src/**/*",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  }
}