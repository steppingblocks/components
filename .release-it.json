{
  "git": {
    "tagName": "v${version}",
    "commitArgs": "--no-verify",
    "commitMessage": "chore(releases): release v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "access": "public",
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md"
    }
  },
  "scripts": {
    "beforeStart": [
      "npm run lint"
    ]
  }
}